<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteback"
    tools:context=".ui.fragment.Home"
    tools:ignore="ExtraText">
    <!--    header - Toolbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20sp"
                android:fontFamily="@font/_28pt_semibold"
                android:textColor="@color/black"
                android:text="PennyWise"
                android:textSize="18sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/circleImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20sp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:shapeAppearanceOverlay="@style/CircleImageStyle" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

          <LinearLayout
              android:id="@+id/layoutWallet"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:gravity="center_horizontal"
              android:background="@color/gray4_back"
              android:orientation="horizontal">
              <androidx.cardview.widget.CardView
                  android:id="@+id/backgrMain"
                  android:layout_width="150dp"
                  android:layout_height="170dp"
                  app:cardCornerRadius="25dp"
                  android:layout_gravity="center_vertical"
                  app:cardElevation="0dp"
                  app:cardBackgroundColor="@color/white"
                  android:layout_marginStart="20sp"
                  app:cardUseCompatPadding="false">
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:padding="20sp">
                      <ImageView
                          android:id="@+id/imageView2"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/wallet"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent" />

                      <TextView
                          android:id="@+id/tongluongtv"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="4dp"
                          android:layout_marginTop="16dp"
                          android:text="@string/tongluong"
                          android:textColor="@color/text_black_primary"
                          android:fontFamily="@font/inter_18pt_regular"
                          android:textSize="12sp"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/imageView2" />
                      <TextView
                          android:id="@+id/tongluong"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/text_black_primary"
                          android:textSize="18sp"
                          android:text="999,000đ"
                          android:fontFamily="@font/_18_semibold"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/tongluongtv"
                          />
                  </androidx.constraintlayout.widget.ConstraintLayout>
              </androidx.cardview.widget.CardView>


              <androidx.cardview.widget.CardView
                  android:id="@+id/backgrMain2"
                  android:layout_width="150dp"
                  android:layout_height="170dp"
                  app:cardCornerRadius="25dp"
                  app:cardElevation="0dp"
                  app:cardBackgroundColor="@color/white"
                  android:layout_gravity="center_vertical"
                  android:layout_marginStart="20sp"
                  app:cardUseCompatPadding="false">
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:padding="20sp">
                      <ImageView
                          android:id="@+id/imageView3"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/wallet"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent" />
                      <TextView
                          android:id="@+id/textView"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="4dp"
                          android:layout_marginTop="16dp"
                          android:text="@string/Tongchiphi"
                          android:textColor="@color/text_black_primary"
                          android:fontFamily="@font/inter_18pt_regular"
                          android:textSize="12sp"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/imageView3" />
                      <TextView
                          android:id="@+id/tongChiP"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/text_black_primary"
                          android:textSize="18sp"
                          android:text="999,000đ"
                          android:fontFamily="@font/_18_semibold"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/textView"
                          />
                  </androidx.constraintlayout.widget.ConstraintLayout>
              </androidx.cardview.widget.CardView>

          </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7">
                <ImageView
                    android:id="@+id/carousel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/carousel"
                    android:layout_below="@id/layoutWallet"
                    android:layout_marginTop="20sp"
                    tools:ignore="NotSibling,UnknownId" />

                <RelativeLayout
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/carousel"
                    android:layout_marginTop="20sp"
                    android:layout_marginHorizontal="27dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/moi_nhat"
                        android:fontFamily="@font/_24pt_semibold"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more_horiz"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="2dp"
                        />
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ExpenseRecylerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/view3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="27dp"
                    tools:listitem="@layout/item_view_home"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
